<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="kevin.mytweet">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".app.MyTweetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.Welcome"/>
        </activity>
        <activity
            android:name=".activities.Login"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.Welcome"/>
        </activity>
        <activity
            android:name=".activities.TimeLineActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.DetailTweetActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TimeLineActivity"/>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TimeLineActivity"/>
        </activity>
        <activity
            android:name=".activities.AddTweetActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TimeLineActivity"/>
        </activity>
    </application>

</manifest>